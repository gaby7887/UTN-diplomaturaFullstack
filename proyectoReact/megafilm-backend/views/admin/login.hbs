<form class="formLogin" action="/admin/login" method="post">
    <div class="col-auto">
        <label for="inputPassword6" class="col-form-label">Usuario</label>
        <input 
            type="text" 
            class="form-control" 
            placeholder="Nombre" 
            aria-label="Username" 
            aria-describedby="addon-wrapping"
            name="usuario">
    </div>

    <div class="col-auto">
        <label for="inputPassword6" class="col-form-label">Password</label>
    </div>
    <div class="col-auto">
        <input 
            type="password" 
            id="inputPassword6" 
            class="form-control" 
            placeholder="Contraseña" 
            aria-labelledby="passwordHelpInline"
            name="password">
    </div>
    <div class="col-auto">
        <span id="passwordHelpInline" class="form-text">
        Debera tener 4 caracteres como minimo.
        </span>
    </div>
    
    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Ingresar</button>
    </div>
</form>
{{#if error}}
    <p style="color: withe">Usuario y/o contraseña incorrectos</p>
{{/if}}