<div class="contenedorNovedad">
    <h4 class="tituloNovedad">Agregar una novedad</h4>
    <form class="formAgregar" action="/admin/novedades/agregar" method="post">
        <div class="col-auto">
            <input 
                type="text" 
                class="form-control" 
                placeholder="Titulo" 
                name="titulo">
        </div>
        <div class="col-auto">
            <textarea type="text" 
                class="form-control" 
                placeholder="Cuerpo" 
                name="cuerpo"></textarea>
        </div>        
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3 btnGuardar">Guardar</button>
        </div>
    </form>
    {{#if error}}
        <p>{{message}}</p>
    {{/if}}
</div>